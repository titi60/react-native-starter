{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2018",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "$assets/*": ["./assets/*"],
      "$components/*": ["./components/*"],
      "$shared/*": ["./components/shared/*"],
      "$pages/*": ["./pages/*"],
      "$routes/*": ["./routes/*"],
      "$styles/*": ["./styles/*"],
      "$utils/*": ["./utils/*"],
      "$tests/*": ["./tests/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "_templates",
    "scripts",
    "src/tests/__mocks__/*"
  ]
}
